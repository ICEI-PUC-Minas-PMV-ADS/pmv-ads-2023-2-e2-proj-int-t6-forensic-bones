@model IEnumerable<Forensic_Bones.Models.InventarioEsqueleto>

@{
    ViewData["Title"] = "Index";
}

<div class="tituloPage m-3 text-center">
    <h4><b>RELATÓRIO DE ANTROPOLOGIA FORENSE - INVENTÁRIO DO ESQUELETO</b></h4>

</div>
<hr />
<div class="btn-card mb-3 ps-5">
    <a asp-action="Create" class="btn custom-button-card">Novo Inventário</a>
</div>
<div class="container pb-3">
    @for (int i = Model.Count() - 1; i >= 0; i--)
    {
        var item = Model.ElementAt(i);
        <div class="card mb-3">
            <div class="card-content">
                <div class="card-header text-center"><h5 class="card-title" id="">Relatório: @Html.DisplayFor(modelItem => @item.Relatorio.Codigo)</h5></div>

            </div>
            <div class="card text-center d-flex mx-auto m-3 col-10">
                <div class="card-body flex-md-column justify-content-center ">

                    <p class="card-text">
                        <h5>fotografia do Esqueleto</h5>
                        Foto: @Html.DisplayFor(modelItem => item.FotoEsqueleto)
                        <img src="@item.FotoEsqueleto" alt="Imagem" class="img-thumbnail d-flex mx-auto" style="max-width: 100%;" />
                    </p>
                    <!--<div class="form-group mb-3 col-8 mx-auto">
                        <label for="Relatorio" class="col-sm-4 mb-3 mx-auto">Relatório:</label>
                        <input for="Relatorio" class="form-control text-center" readonly value="@item.Relatorio" />
                    </div>-->

                </div>
                <div class="Observacoes align-content-start  m-1">
                    <label for="Observacoes" class="col-sm-4 mb-3 mx-auto">Observacoes:</label>
                    <textarea for="Observacoes" name="Observacoes" class="form-control text-center" readonly>@item.ObservacoesEsq</textarea>
                </div>
                <div class="buttonCrud m-3 d-flex mx-auto align-content-center">
                    <a asp-action="Edit" asp-route-id="@item.RelatorioId" class="btn btn-secondary me-1" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar">Alterar</a>
                    <a asp-action="Delete" asp-route-id="@item.RelatorioId" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Deletar">Apagar</a>

                </div>

            </div>
        </div>
    }
    
</div>