@model IEnumerable<Forensic_Bones.Models.InventEsqueleto>

@{
    ViewData["Title"] = "Index";
}
@{
    var orderedModel = Model.OrderByDescending(i => i.Data);
}

<div class="card text-center d-flex mx-auto m-5 col-lg-6 col-md-12 col-sm-12">
    <div class="card-header">
        <b>Últimos Relatórios de Antropologia Forense</b>
    </div>
    @for (int i = Model.Count() - 1; i >= 0; i--)
    {
        var item = Model.ElementAt(i);
        <div class="card m-4 text-center d-flex mx-auto">
            <div class="card-body d-flex flex-row flex-wrap justify-content-between align-items-center p-0 mt-1 ms-3 me-3">
                <div class="NumeroRelatorio text-center d-flex mx-auto">
                    <label for="NumRelatorio" class="col-sm-4">Relatório:</label>
                    <input type="text" id="" name="Relatorio" class="caixa-texto text-center" readonly value="@item.QuantidadeDeOssos" />
                </div>
                <div class="DataRelatorio text-center d-flex mx-auto ps-3">
                    <label for="date" class="col-sm-4">Data:</label>
                    <input type="text" id="DataRelatorio" name="DataRelatorio" class="caixa-texto text-center col-6" readonly value="@item.Data" />


                </div>
                <div class="buttonCrud m-3 d-flex mx-auto align-content-center">
                    <button type="button" class="btn btn-secondary me-1" id="createItem" data-bs-toggle="tooltip" data-bs-placement="top" title="Confirmar">
                        <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: none; color: white;">Editar</a>
                    </button>
                    <button type="button" class="btn btn-danger" id="createItem" data-bs-toggle="tooltip" data-bs-placement="top" title="Confirmar">
                        <a asp-action="Delete" asp-route-id="@item.Id" style="text-decoration: none; color: white;">Delete</a>
                    </button>
                </div>
            </div>
        </div>
    }
    <div class="btn-card mb-3">
        <a asp-action="Create" class="btn custom-button-card">Novo relatório</a>
    </div>
</div>

