@model IEnumerable<ForensicBones100.Models.MarcadoresCranio>

@{
    ViewData["Title"] = "Index";
}

<div class="tituloPage m-3 text-center">
    <h4><b>RELATÓRIO DE ANTROPOLOGIA FORENSE - ESTIMATIVA DE SEXO PELO CÂNIO</b></h4>
</div>
<hr />
<div class="btn-card mb-3 ms-5 mx-auto">
    <a asp-action="Create" class="btn custom-button-card">Estimar Sexo</a>
</div>
<div class="container col-12">
    <div class="row ">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card">
                    <div class="card-header text-center">
                        <h5 class="card-title" id="">Relatório: <b>@Html.DisplayFor(modelItem => @item.Relatorio.Codigo)</b></h5>
                        <h3 class="card-title" id="">Marcadores do Crânio<b></b></h3>
                    </div>
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table">
                                <thead class="TheadTitle text-center">
                                    <tr>
                                        <th>Características</th>
                                        <th>Sexo</th>
                                        <th>Observações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center align-middle">Cristal Nucal</td>
                                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.CristaNucal)</td>
                                        <td>
                                            <textarea class="form-control text-center" readonly placeholder="Deixe um comentário aqui" id="floatingTextarea2" style="height: 40px">@item.CristaNucalDesc</textarea>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-center align-middle">Processo Mastóide</td>
                                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.ProcessoMastoide)</td>
                                        <td>
                                            <textarea class="form-control text-center" readonly placeholder="Deixe um comentário aqui" id="floatingTextarea2" style="height: 40px">@item.ProcessoMastoideDesc</textarea>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-center align-middle">Eminência Mentoniana</td>
                                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.EminenciaMentoniana)</td>
                                        <td>
                                            <textarea class="form-control text-center" readonly placeholder="Deixe um comentário aqui" id="floatingTextarea2" style="height: 40px">@item.EminenciaMentonianaDesc</textarea>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-center align-middle">Margem Supra-Orbital</td>
                                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.SupraOrbital)</td>
                                        <td>
                                            <textarea class="form-control text-center" readonly placeholder="Deixe um comentário aqui" id="floatingTextarea2" style="height: 40px">@item.SupraOrbitalDesc</textarea>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-center align-middle">Área da Glabela</td>
                                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.AreaGlabela)</td>
                                        <td>
                                            <textarea class="form-control text-center" readonly placeholder="Deixe um comentário aqui" id="floatingTextarea2" style="height: 40px">@item.AreaGlabelaDesc</textarea>
                                        </td>
                                    </tr>
                                    
                                </tbody>
                                
                            </table>
                            <div class="form-group align-content-center mx-auto text-center col-lg-6 col-md-8 col-sm-12 mb-3">
                                <div class="custom-bg-color d-flex  p-3">
                                    <div class="mr-3 pe-1" style="flex: 1;">
                                        <label for="CalculoEstimativaSexo" class="control-label">Sexo Estimado:</label>
                                        @Html.DisplayFor(modelItem => item.CalculoEstimativaSexo)
                                    </div>

                                </div>
                            </div>
                            <div class="buttonCrud m-3 d-flex mx-auto justify-content-center">
                                <a asp-action="Edit" asp-route-id="@item.MarcadoresCranioId" class="btn btn-secondary me-1" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar">Alterar</a>
                                <a asp-action="Delete" asp-route-id="@item.MarcadoresCranioId" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Deletar">Apagar</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>