@model IEnumerable<ForensicBones100.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="tituloPage m-3 text-center">
    <h4><b>USUÁRIO CADASTRADO</b></h4>
</div>
<hr />

<div class="card-deck">
    @foreach (var item in Model)
    {

        <div class="card card text-center d-flex mx-auto m-5 col-lg-6 col-md-12 col-sm-12">
            <h5 class="card-header">@Html.DisplayFor(modelItem => item.Nome)</h5>
            <div class="card-body d-flex flex-row flex-wrap justify-content-between align-items-center p-0 mt-1 ms-3 me-3">

                <div class="card-text mx-auto text-center mb-3">
                    <strong>Email:</strong> @Html.DisplayFor(modelItem => item.Email)<br />
                    <strong>Cargo:</strong> @Html.DisplayFor(modelItem => item.Cargo)<br />
                    <strong>Perfil:</strong> @Html.DisplayFor(modelItem => item.Perfil)<br />
                </div>

            </div>
            <div class="card-button mb-3">
                <a asp-action="Edit" asp-route-id="@item.UsuarioId" class="btn custom-button-card">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-danger">Excluir</a>
            </div>
        </div>
    }
</div>